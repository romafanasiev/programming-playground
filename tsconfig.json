{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "preserveWatchOutput": true,
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": false,
    "verbatimModuleSyntax": true
  },
  "include": ["**/*.d.ts", "*.js"],
  "exclude": ["node_modules"]
}
